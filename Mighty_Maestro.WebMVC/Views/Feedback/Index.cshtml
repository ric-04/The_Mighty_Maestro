@model IEnumerable<Mighty_Maestro.Models.Feedback.FeedbackListItem>

@{
    ViewBag.Title = "Index";
}
<div style="background-color:white;padding:10px;opacity:70%;">
    <p style="font-size:25px;">
        @Html.ActionLink("Create New", "Create")
    </p>
    @if (TempData.ContainsKey("SaveResult"))
    {
        <div class=alert alert-success fade in" role="alert">
            <button type="button" class="close" data-dismiss="alert"><span>&times;</span></button>
            @TempData["SaveResult"]
        </div>
    }
    <h2 class="text-center">Feedback Index</h2>

    <table style="color:black;" class="table">
        <tr style="color:red;font-size:22px;">
            <th>
                @Html.DisplayNameFor(model => model.FeedbackId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeacherId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AnswerId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FeedbackAnswer)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CorrectAnswer)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.FeedbackId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TeacherId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AnswerId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FeedbackAnswer)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CorrectAnswer)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                    @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
                </td>
            </tr>
        }

    </table>
</div>